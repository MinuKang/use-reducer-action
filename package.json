{
  "name": "use-reducer-action",
  "version": "1.0.0",
  "description": "Create hook state and simple actions from useReducer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && tsc",
    "prepublishOnly": "npm run build",
    "test": "npx nyc --clean jest --coverage"
  },
  "nyc": {
    "tempDirectory": "./coverage",
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "keywords": [
    "react",
    "hook",
    "reducer"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "Minwoo Kang <minukang5874@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MinuKang/use-reducer-action.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MinuKang/use-reducer-action/issues"
  },
  "homepage": "https://github.com/MinuKang/use-reducer-action#readme",
  "peerDependencies": {
    "@types/react": "^16.9.17",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/git": "^7.0.16",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.18",
    "@types/react-test-renderer": "^16.9.0",
    "@types/semantic-release": "^15.13.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "nyc": "^15.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.9.0",
    "semantic-release": "^15.13.24",
    "source-map-support": "^0.5.16",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.6.3"
  },
  "dependencies": {}
}
